  title #{tournament.tournament_name} 
header.hero
  .hero-wrap
    h1#headline #{tournament.tournament_name} 
    
    
    - console.log(tournament)
    p.year
      i.fa.fa-star
      | #{tournament.tournament_id} 
      i.fa.fa-star
    p #{tournament.tournament_date}
    

section#bracket
  .container
    .split.split-one
      //Round 1
      .round.round-one.current 
       .round-details
          | Round 1
       each team in tournament.teams    
        ul.matchup 
          li.team.team-top
            | #{team.teamname}  
        
       //Round 2 
      
      .round.round-two
       .round.round-one.current 
        .round-details
         | Round 2
        each bracket in tournament.teamwin    
          ul.matchup 
           li.team.team-top
             | #{bracket.teamname}  

      //Semi-Final Round
      .round.round-three
       .round.round-one.current 
        .round-details
         | Semi-Finals
        each bracket in tournament.semifinalteamwin    
          ul.matchup 
           li.team.team-top
             | #{bracket.teamname}  

      //Final Round
      .champion
       .round.round-one.current 
        .semis-l
         .round-details
           | Final        
         each bracket in tournament.finalteamwin    
          ul.matchup 
           li.team.team-top
             | #{bracket.teamname}  
         
      
           
